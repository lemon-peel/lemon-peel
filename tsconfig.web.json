{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global", "webpack-env"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "packages/**/*",
    "packages/**/*.json",
    "types/env.d.ts",
    "types/global.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}
